{
  "name": "hubot-openshift",
  "version": "1.0.1",
  "description": "Hubot on OpenShift",
  "keywords": [
    "Hubot",
    "OpenShift",
    "Node.js",
    "application",
    "openshift"
  ],
  "author": {
    "name": "Katie Miller",
    "email": "katie@codemiller.com",
    "url": "http://www.codemiller.com/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/codemiller/hubot-openshift"
  },
  "engines": {
    "node": "^4.0.0",
    "npm": "^3.0.0"
  },
  "dependencies": {
    "hubot": "^2.6.0",
    "hubot-scripts": "^2.5.0",
    "hubot-slack": "^3.3.0",
    "lodash": "^2.4.2",
    "pm2": "^1.0.0",
    "request": "^2.48.0",
    "shortid": "^2.2.2",
    "twit": "^1.1.6",
    "underscore": "^1.8.3"
  },
  "scripts": {
    "start": "PORT=$OPENSHIFT_NODEJS_PORT BIND_ADDRESS=$OPENSHIFT_NODEJS_IP HEROKU_URL=$OPENSHIFT_APP_DNS REDIS_URL=redis://:$REDIS_PASSWORD@$OPENSHIFT_REDIS_HOST:$OPENSHIFT_REDIS_PORT pm2 start --name hubot --interpreter sh bin/hubot -- -n Hubot -a slack",
    "restart": "pm2 restart hubot",
    "stop": "pm2 stop hubot && pm2 delete hubot"
  }
}
